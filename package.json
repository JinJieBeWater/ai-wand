{
  "publisher": "JinJieBeWater",
  "name": "magic-wand",
  "displayName": "Magic Wand",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "description": "Magic Wand is a powerful VS Code extension. Customize your own prompt words easily. With just a shortcut key, summon a menu of prompt words to assist your coding. It integrates seamlessly into the development process, boosting your programming efficiency significantly.",
  "author": "JinJieBeWater",
  "license": "MIT",
  "homepage": "https://github.com/JinJieBeWater/magic-wand#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/JinJieBeWater/magic-wand"
  },
  "bugs": {
    "url": "https://github.com/JinJieBeWater/magic-wand/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.92.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "magic-wand.magics-settings",
        "category": "Magic Wang Settings",
        "title": "Customize magic wand",
        "icon": "$(gear)"
      },
      {
        "command": "magic-wand.quick-pick.showMagics",
        "title": "Spark a magic",
        "category": "Magic Wand 🪄✨🔮",
        "icon": "$(tools)"
      }
    ],
    "keybindings": [
      {
        "command": "magic-wand.quick-pick.showMagics",
        "key": "alt+`"
      }
    ],
    "configuration": {
      "title": "Magic Wand",
      "type": "object",
      "properties": {
        "magic-wand.magics": {
          "type": "object",
          "default": {
            "Information": [
              {
                "label": "docs",
                "description": "使用注释",
                "prompt": "保留原本代码的同时对代码进行注释, 对于定义函数的地方要使用JsDoc, 对于其他地方使用单行注释",
                "mode": "insert"
              },
              {
                "label": "Log",
                "description": "打印日志",
                "prompt": "根据选中的代码打印日志",
                "mode": "edit"
              }
            ],
            "Typescript": [
              {
                "label": "typed",
                "description": "为代码补全类型",
                "prompt": "为代码补全类型",
                "mode": "edit"
              }
            ],
            "Kit": [
              {
                "label": "Mermaid",
                "description": "将代码逻辑转换为Mermaid",
                "prompt": "将代码逻辑转换为Mermaid",
                "mode": "ask"
              }
            ]
          },
          "description": "Use the object's first-level property for group setting and the second for Magic setting."
        },
        "magic-wand.status.activeProvider": {
          "type": "string",
          "default": "openRouter",
          "description": "Active AI provider",
          "enum": [
            "openRouter",
            "ollama"
          ],
          "enumDescriptions": [
            "A unified interface for LLMs. Find the best models & prices for your prompts.",
            "Get up and running with large language models. "
          ]
        },
        "magic-wand.status.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens"
        },
        "magic-wand.provider.openRouterApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenRouter ApiKey"
        },
        "magic-wand.provider.openRouterModel": {
          "type": "string",
          "default": "meta-llama/llama-3.1-405b-instruct:free",
          "description": "OpenRouter Model"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "watch": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "dependencies": {
    "@openrouter/ai-sdk-provider": "^0.0.6",
    "ai": "^4.1.13",
    "diff": "^7.0.0",
    "ollama-ai-provider": "^1.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@JinJieBeWater/eslint-config": "^2.26.0",
    "@JinJieBeWater/ni": "^0.22.4",
    "@types/diff": "^7.0.1",
    "@types/node": "^22.4.1",
    "@types/vscode": "^1.92.0",
    "@vscode/vsce": "^3.0.0",
    "bumpp": "^9.5.1",
    "eslint": "^9.9.0",
    "esno": "^4.7.0",
    "pnpm": "^9.7.1",
    "reactive-vscode": "^0.2.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^2.0.5",
    "vscode-ext-gen": "^0.4.1"
  }
}
