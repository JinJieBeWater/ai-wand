  "activationEvents": [
    "onStartupFinished",
    "onCommand:magic-wand.showMagics",
    "onCommand:magic-wand.magics-settings"
  ],
  "contributes": {
    "commands": [
      {
        "command": "magic-wand.magics-settings",
        "title": "Customize magic wand",
        "category": "Magic Wand",
        "icon": "$(gear)"
      },
      {
        "command": "magic-wand.showMagics",
        "title": "Spark a magic",
        "category": "Magic Wand",
        "icon": "$(tools)"
      },
      {
        "command": "magic-wand.codelens.click",
        "title": "Codelens Click",
        "enablement": "editorHasSelection"
      },
      {
        "command": "magic-wand.codelens.status.cancel",
        "title": "Codelens Click",
        "enablement": "editorHasSelection"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "magic-wand.codelens.click",
          "when": "false"
        },
        {
          "command": "magic-wand.codelens.status.cancel",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "magic-wand.showMagics",
        "key": "alt+`"
      }
    ],
